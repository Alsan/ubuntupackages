#!/bin/bash
######## installpackages - Installs packages & necessary repos - script 2

######## Backup & Sync

#### aptik - http://www.howtogeek.com/206454/how-to-backup-and-restore-your-apps-and-ppas-in-ubuntu-using-aptik/
sudo apt-add-repository -y ppa:teejee2008/ppa
sudo apt-fast -y update
sudo apt-fast -y install aptik

######## OS & Utilities

#### UNetbootin
sudo add-apt-repository -y ppa:n-muench/programs-ppa
sudo apt-fast -y update
sudo apt-fast -y install unetbootin

#### Xorg Edgers - Unstable - Contains "bleeding-edge" graphics/system packages which may be unstable - more updated than ppa:ubuntu-x-swat/x-updates
sudo add-apt-repository -y ppa:xorg-edgers/ppa
sudo apt-fast -y update
sudo apt-fast -y dist-upgrade
##sudo apt-fast install nvidia-graphics-drivers-346	#EXAMPLE
#how to uninstall it -> sudo ppa-purge xorg-edgers  -> sudo ppa-purge ubuntu-x-swat

#### Getdeb (1)
wget -q -O- http://archive.getdeb.net/getdeb-archive.key | sudo apt-key add -
test -f /etc/apt/sources.list.d/getdeb_apps.list || sudo sh -c 'echo "deb http://archive.getdeb.net/ubuntu utopic-getdeb apps" >> /etc/apt/sources.list.d/getdeb_apps.list'
test -f /etc/apt/sources.list.d/getdeb_games.list || sudo sh -c 'echo "deb http://archive.getdeb.net/ubuntu utopic-getdeb games" >> /etc/apt/sources.list.d/getdeb_games.list'
sudo apt-fast -y update


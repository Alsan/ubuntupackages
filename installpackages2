#!/bin/bash
######## installpackages - Installs packages & necessary repos - script 2

######## Backup & Sync

#### aptik - http://www.howtogeek.com/206454/how-to-backup-and-restore-your-apps-and-ppas-in-ubuntu-using-aptik/
sudo apt-add-repository -y ppa:teejee2008/ppa
sudo apt-get -y update
sudo apt-get -y install aptik

######## OS & Utilities

#### y-ppa-manager - (launchpad getkeys)
sudo add-apt-repository -y ppa:webupd8team/y-ppa-manager/
sudo apt-get -y update
sudo apt-get -y install y-ppa-manager

#### UNetbootin
sudo add-apt-repository -y ppa:n-muench/programs-ppa
sudo apt-get -y update
sudo apt-get -y install unetbootin

#### Various
sudo apt-get -y install gparted keepassx #thewindowfactory (twf)


####Qt Linux
sudo apt-get -y install mesa-common-dev libglu1-mesa-dev	####Qt dependencies
wget http://download.qt-project.org/official_releases/qt/5.4/5.4.0/qt-opensource-linux-x64-5.4.0.run
chmod +rwx ~/qt-opensource-linux-x64-5.4.0.run
~/qt-opensource-linux-x64-5.4.0.run
rm ~/qt-opensource-linux-x64-5.4.0.run

##### Fritzing
wget -q -O- http://archive.getdeb.net/getdeb-archive.key | sudo apt-key add -
sudo sh -c 'echo "deb http://archive.getdeb.net/ubuntu utopic-getdeb apps" >> /etc/apt/sources.list.d/getdeb_apps.list'
sudo sh -c 'echo "deb http://archive.getdeb.net/ubuntu utopic-getdeb games" >> /etc/apt/sources.list.d/getdeb_games.list'
sudo apt-get -y update
sudo apt-get -y install fritzing


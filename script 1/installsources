#!/bin/bash
########installsources

rm -f -r /etc/apt/sources.list.d/*

#### google-chrome
wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | sudo apt-key add -
sudo sh -c 'echo "deb http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list'

#### gimp
sudo add-apt-repository -y ppa:otto-kesselgulasch/gimp/

#### VLC
sudo add-apt-repository -y ppa:ed10vi86/video

#### systemback - HIGHLY RECOMMENDED!
sudo apt-add-repository -y ppa:nemh/systemback

#### WebUpd8: Audacious, unity-reboot, etc
sudo add-apt-repository -y ppa:nilarimogard/webupd8

#### New apt
sudo add-apt-repository -y ppa:mvo/apt-src-ftparchive

#### grub-customizer
sudo add-apt-repository -y ppa:danielrichter2007/grub-customizer/

########################################################### ONLY FOR UBUNTU WITH UNITY SURELY

#### unity-tweak-tool
sudo add-apt-repository -y ppa:freyja-dev/unity-tweak-tool-daily

#### Ubuntu Tweak
sudo add-apt-repository -y ppa:tualatrix/ppa
#sudo add-apt-repository -y ppa:freyja-dev/tualatrix

#### classicmenu-indicator & Unsettings
sudo add-apt-repository -y ppa:diesch/testing

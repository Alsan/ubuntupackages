#!/bin/bash
########installpackages

sudo apt-get -y update
sudo apt-get -y upgrade

####Backup & Sync
sudo apt-get -y install systemback
#DirSyncPro
mkdir /home/usuario/.DirSyncPro
wget http://downloads.sourceforge.net/project/directorysync/DirSync%20Pro%20%28stable%29/1.49/DirSyncPro-1.49-Linux.zip -O/home/usuario/.DirSyncPro/DirSyncPro-1.49-Linux.zip
unzip /home/usuario/.DirSyncPro/DirSyncPro-1.49-Linux.zip -d /home/usuario/.DirSyncPro
rm /home/usuario/.DirSyncPro/DirSyncPro-1.49-Linux.zip
chmod +rwx /home/usuario/.DirSyncPro/DirSyncPro-1.49-Linux/dirsyncpro.jar
ln -s /home/usuario/.DirSyncPro/DirSyncPro-1.49-Linux/dirsyncpro.jar /home/usuario/Escritorio/dirsyncpro.jar

####OS & Utilities
sudo apt-get -y install ubuntu-restricted-extras synaptic gdebi cairo-dock ppa-purge y-ppa-manager grub-customizer

#Teamviewer
#http://www.teamviewer.com/es/download/linux.aspx
wget http://download.teamviewer.com/download/teamviewer_linux.deb
sudo dpkg -i teamviewer_linux.deb
rm teamviewer_linux.deb

#gnome-system-tools gnome-disk-utility

########Desktop Environment
#

########Themes
sudo apt-get -y install ambiance-colors radiance-colors ubuntu-mono

####Language packages
#

####Security & Privacy
sudo apt-get -y install gufw

####CD/DVD Tools
#

####Photos & Graphics
sudo apt-get -y install gnome-exe-thumbnailer shutter gimp xsane

####Audio & Music
#

####Videos & Movies
#

####All multimedia content
sudo apt-get -y install vlc

####Development
sudo apt-get -y install openjdk-7-jre

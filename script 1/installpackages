#!/bin/bash
######## installpackages - Installs packages & necessary repos

###### Remove all your repos
sudo rm -f -r /etc/apt/sources.list.d/*

######## Repairing system 1/2
#sudo apt-get -f install

######## Upgrading system
sudo apt-get -y update
sudo apt-get -y upgrade

######## Backup & Sync
#### systemback - HIGHLY RECOMMENDED!
sudo apt-add-repository -y ppa:nemh/systemback
sudo apt-get -y update
sudo apt-get -y install systemback

######## OS & Utilities
sudo apt-get -y install ubuntu-restricted-extras synaptic preload gdebi ppa-purge

#### grub-customizer
sudo add-apt-repository -y ppa:danielrichter2007/grub-customizer/
sudo apt-get -y update
sudo apt-get -y install grub-customizer

######## Desktop Environment
#

######## Themes
#

######## Language packages
#

######## Security & Privacy
sudo apt-get -y install gufw

######## CD/DVD Tools
#

######## Photos & Graphics
sudo apt-get -y install gnome-exe-thumbnailer shutter

#### gimp
sudo add-apt-repository -y ppa:otto-kesselgulasch/gimp/
sudo apt-get -y update
sudo apt-get -y install gimp

######## Audio & Music
#

######## Videos & Movies
#

######## All multimedia content
sudo apt-get -y install vlc

######## Development
sudo apt-get -y install openjdk-7-jre

######## Web Browsers
#### google-chrome
wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | sudo apt-key add -
sudo sh -c 'echo "deb http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list'
sudo apt-get -y update
sudo apt-get -y install google-chrome-stable

######## Social
#

######## File Management
sudo apt-get -y install rar unrar unace p7zip-full p7zip-rar sharutils mpack arj cabextract

######## File Sharing
#

######## News & Books
#

######## Office & Productivity
sudo apt-get -y install libreoffice libreoffice-help-es libreoffice-l10n-es ttf-mscorefonts-installer

######## Games
#

######## Extra

######## uninstallpackages
sudo apt-get remove -y firefox firefox-locale-es firefox-locale-en xul-ext-ubufox

######## Upgrading system
sudo apt-get -y upgrade
sudo apt-get -y dist-upgrade

######## Repairing system 2/2
#sudo apt-get -f install

######## Cleaning system
sudo apt-get -y clean
sudo apt-get -y autoremove

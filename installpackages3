#!/bin/bash
######## installpackages - Installs packages & necessary repos - script 3

######## Backup & Sync

#### DirSyncPro
sudo mkdir /opt/DirSyncPro
sudo wget http://kent.dl.sourceforge.net/project/directorysync/DirSync%20Pro%20%28stable%29/1.50/DirSyncPro-1.50-Linux.zip -O /opt/DirSyncPro/DirSyncPro-1.50-Linux.zip
sudo wget http://dirsyncpro.org/images/dirsyncpro.png -O /opt/DirSyncPro/dirsyncpro.png
sudo unzip /opt/DirSyncPro/DirSyncPro-1.50-Linux.zip -d /opt/DirSyncPro
sudo rm /opt/DirSyncPro/DirSyncPro-1.50-Linux.zip
sudo chmod +rwx /opt/DirSyncPro/DirSyncPro-1.50-Linux/dirsyncpro.jar

test -f /usr/share/applications/dirsyncpro.desktop || sudo sh -c 'echo "[Desktop Entry]
Type=Application
Name=DirSyncPro
Comment=Sync your files!
Categories=System
Exec=/opt/DirSyncPro/DirSyncPro-1.50-Linux/dirsyncpro.jar
Icon=/opt/DirSyncPro/dirsyncpro.png" >> /usr/share/applications/dirsyncpro.desktop'
##sudo ln -s /opt/DirSyncPro/DirSyncPro-1.50-Linux/dirsyncpro.jar ~/Escritorio/DirSyncPro

#### systemback - HIGHLY RECOMMENDED!
sudo apt-add-repository -y ppa:nemh/systemback
sudo apt-fast -y update
sudo apt-fast -y install systemback

